<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/project_card_color"
    android:showDividers="none">

     <RelativeLayout 
        android:layout_height="wrap_content" 
        android:padding="4dip"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/project_card_min_width">
        
        <ImageView
           android:id="@+id/listicon"
           android:layout_width="135sp"
           android:layout_height="135sp"
           android:layout_alignParentTop="true"
           android:layout_centerHorizontal="true"
           android:background="@android:color/transparent"
           android:src="@drawable/ic_launcher" />

        <ImageButton
           android:id="@+id/overflowButton"
           style="@style/TransparentButton"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="false"
           android:layout_alignParentLeft="false"
           android:layout_alignParentRight="true"
           android:layout_below="@id/listicon"
           android:layout_marginLeft="-20.0dip"
           android:contentDescription="Overflow Menu"
           android:paddingBottom="20.0dip"
           android:paddingLeft="20.0dip"
           android:paddingRight="10.0dip"
           android:paddingTop="5.0dip"
           android:src="@drawable/overflow" />

        <TextView
           android:id="@+id/projectName"
           style="@style/PrimaryText"
           android:maxLines="2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginRight="10.0dip"
           android:layout_below="@id/listicon"
           android:ellipsize="end"
           android:paddingTop="5.0dip"
           android:paddingRight="10.0dip"
           android:marqueeRepeatLimit="marquee_forever"
           android:paddingLeft="@dimen/project_card_padding"
           android:singleLine="true"
           android:text="Main text" />

        <TextView
           android:id="@+id/companyName"
           style="@style/SecondaryText"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="false"
           android:layout_below="@id/projectName"
           android:paddingLeft="@dimen/project_card_padding"
           android:text="subtitle text" />

        <TextView
           android:id="@+id/Name"
           style="@style/SecondaryTextLime"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="false"
           android:layout_below="@id/companyName"
           android:paddingLeft="@dimen/project_card_padding"
           android:text="SUB TEXT" />
             
        <!--<RatingBar
           android:id="@+id/ratingBar1"
           style="?android:attr/ratingBarStyleSmall"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentTop="false"
           android:layout_below="@id/Name"
           android:isIndicator="false"
           android:numStars="5"
           android:progress="95"
           android:paddingLeft="2dip" />-->

         <com.appgestor.serviarriendos.views.ProgressBarCircularIndetermininate
             android:id="@+id/progressBarCircularImagen"
             android:layout_width="52dp"
             android:layout_height="52dp"
             android:layout_centerHorizontal="true"
             android:layout_centerVertical="true"
             android:background="@color/color_progressbar" />

     </RelativeLayout>
    

</RelativeLayout>