<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="9dip">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90dip"
        android:layout_centerInParent="true"
        android:layout_marginBottom="2dip"
        android:background="@drawable/selector_grid_item_bg"
        android:descendantFocusability="blocksDescendants">



        <ImageView
            android:id="@+id/listicon"
            android:layout_width="90dip"
            android:layout_height="90dip"
            android:padding="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_launcher"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/SecondaryTextLime"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="2.0dip"
            android:layout_marginTop="7.0dip"
            android:singleLine="true"
            android:text="Servicios:"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/listicon"
            android:layout_toEndOf="@+id/listicon"
            android:id="@+id/titulo" />

        <TextView
            android:id="@+id/projectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/SecondaryText"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="2.0dip"
            android:singleLine="true"
            android:layout_marginTop="1.0dip"
            android:text=""
            android:layout_below="@+id/titulo"
            android:layout_toRightOf="@+id/listicon"
            android:layout_toEndOf="@+id/listicon" />

        <TextView
            android:id="@+id/titulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/SecondaryTextLime"
            android:layout_marginTop="7.0dip"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="2.0dip"
            android:singleLine="true"
            android:text="Horarios:"
            android:layout_below="@+id/projectName"
            android:layout_toRightOf="@+id/listicon"
            android:layout_toEndOf="@+id/listicon" />


        <TextView
            android:id="@+id/horario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/SecondaryText"
            android:layout_marginTop="1.0dip"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingLeft="2.0dip"
            android:singleLine="true"
            android:text="24 H"
            android:layout_below="@+id/titulo2"
            android:layout_toRightOf="@+id/listicon"
            android:layout_toEndOf="@+id/listicon" />

        <com.appgestor.serviarriendos.views.ProgressBarCircularIndetermininate
            android:id="@+id/progressBarCircularImageninterno"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@color/color_progressbar"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/titulo"
            android:layout_toStartOf="@+id/titulo"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />

    </RelativeLayout>

</LinearLayout>